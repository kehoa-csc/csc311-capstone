                                <Image url="@../imgs/clock-icon.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="20.0" layoutY="164.0" prefHeight="44.0" prefWidth="56.0" text="Rental " textFill="WHITE">
                            <font>
                                <Font name="AppleMyungjo Regular" size="16.0" />
